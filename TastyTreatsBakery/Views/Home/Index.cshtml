@model List<Treat>

<a class="btn btn-primary" asp-controller="Home" asp-action="Create">Create</a>

<table class="table">
	<tr>
		<th>
			Name
		</th>
		<th>
			Description
		</th>
		<th>
			Price
		</th>
		<th>
			Actions
		</th>
	</tr>

	@foreach(Treat treat in Model)
	{
		<tr>
			<td>@treat.Name</td>
			<td>@treat.Description</td>
			<td>@treat.Price</td>
			<td>
				<a asp-controller="Home" asp-action="Remove" asp-route-id="@treat.Id" class="btn btn-danger">Delete</a>
			</td>
		</tr>
	}
</table>